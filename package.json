{
  "name": "six-cities",
  "version": "7.0.0",
  "description": "Проект «Шесть городов» от HTML Academy",
  "keywords": [
    "rest",
    "api",
    "node.js"
  ],
  "main": "./src/main.cli.js",
  "scripts": {
    "start": "npm run build && node ./dist/src/main.js",
    "start:cli": "npm run build && node ./dist/src/main.cli.js",
    "start:dev:cli": "nodemon --exec npm run ts ./src/main.cli.ts",
    "start:dev:cli:version": "npm run start:dev:cli -- -- -- --version",
    "start:dev:cli:help": "npm run start:dev:cli -- -- -- --help",
    "start:dev:cli:none": "npm run start:dev:cli -- -- -- --none",
    "start:dev:cli:import": "npm run start:dev:cli -- -- -- --import ./mocks/offers.tsv",
    "start:dev:cli:generate": "npm run start:dev:cli -- -- -- --generate 50 ./mocks/offers.tsv http://localhost:3123/api",
    "build": "npm run clean && npm run compile",
    "lint": "tsc --noEmit && eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "compile": "tsc",
    "clean": "rimraf dist",
    "ts": "tsc --noEmit && node --no-warnings=ExperimentalWarning --loader ts-node/esm",
    "mock:server": "json-server ./mocks/mock-server-data.json --port 3123"
  },
  "devDependencies": {
    "@types/convict": "6.1.6",
    "@types/convict-format-with-validator": "6.0.5",
    "@types/node": "20.12.7",
    "@typescript-eslint/eslint-plugin": "6.7.0",
    "@typescript-eslint/parser": "6.7.0",
    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.3",
    "nodemon": "3.1.7",
    "pino-pretty": "11.0.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.2",
    "tslib": "2.6.2",
    "typescript": "5.4.5"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "npm": ">=10"
  },
  "dependencies": {
    "chalk": "5.3.0",
    "convict": "6.2.4",
    "convict-format-with-validator": "6.2.0",
    "dayjs": "1.11.10",
    "dotenv": "16.4.5",
    "got": "14.2.1",
    "inversify": "6.0.2",
    "pino": "9.0.0",
    "reflect-metadata": "0.2.2"
  }
}
